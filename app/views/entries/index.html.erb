<%= render "entries/navbar" %>

<h1>The InvestDEX</h1>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Comments</th>
        <th>Publication date</th>
        <th>Pages</th>
        <th>Category</th>
        <th>Data heavy</th>
        <th>Forecast</th>
        <th>URL</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @entries.each do |entry| %>
        <tr>
          <td><%= entry.title %></td>
          <td><%= entry.author %></td>
          <td><%= entry.comments %></td>
          <td><%= entry.publication_date %></td>
          <td><%= entry.pages %></td>
          <td><%= entry.category.name %></td>
          <td><%= entry.data_heavy.yesno.capitalize %></td>
          <td><%= entry.forecast.yesno.capitalize %></td>
          <td><%= entry.url %></td>
          <td><%= link_to 'Show', entry %></td>
          <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
          <td><%= link_to entry, method: :delete, data: { confirm: 'Are you sure?' } do %>
    <span class="glyphicon glyphicon-trash"></span>
  <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<p>
  <%= link_to new_entry_path do %>
    <span class="glyphicon glyphicon-plus"></span>  Add New Entry
  <% end %>
</p>

<hr>
<h4>Bookmarklet</h4>
<div class="col-md-6 col-md-offset-3">
<center>
  <a href="javascript:m='http://localhost:3000/entries/new/';w=window.open(m,'addwindow','status=no,toolbar=no,width=1024,height=768,resizable=yes');setTimeout(function(){w.focus();},250);document.getElementById('entry_title').value='test';document.getElementById('entry_url').value='url';" class="btn btn-primary" disabled="disabled">Add to InvestDEX</a>
  <p><small>This is currently under development. Eventually, you will be able drag this to your bookmarks bar and click it to add any page you are visiting to InvestDEX.</small></p>
</center>
</div>

